<% include ../partials/head %>

<h1 class="text-center" style="margin-top: 1rem;">Add a Camp Ground!</h1>

<div class="row" style="margin-top: 1rem; margin-bottom: 1rem;">
    <div style="width: 50%; margin: 0 auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Enter Name of Campground</label>
                <input id="name" class="form-control" type="text" name="campName" required placeholder="Camp Ground">
            </div>
            
            <div class="form-group">
                <label for="img">Enter Image URL</label>
                <input id="img" class="form-control" type="url" name="campImage" placeholder="Image URL" required />
            </div>
            <div class="form-group">
                <label for="price">Enter The Price of The Campground Per Night(In $ Dollars)</label>
                <input id="price" class="form-control" type="number" name="campPrice" min="0.01" step="0.01" required placeholder="Camp Ground Price">
            </div>
            <div class="form-group">
                <label for="desc">Enter a Description for the Camp Ground</label>
                <textarea id="desc" class="form-control" name="campDesc" placeholder="Campground Description" rows="6"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Add a CampGround!</button>
            </div>
        </form>
        <a class="btn btn-success" href="/campgrounds">Go Back to Listings</a>
    </div>
</div>

<% include ../partials/foot %>