<% include ../partials/head %>

<h1 class="text-center" style="margin-top: 1rem;">Edit <%= thisCamp.name %></h1>

<div class="row" style="margin-top: 1rem; margin-bottom: 1rem;">
    <div style="width: 50%; margin: 0 auto;">
        <form action="/campgrounds/<%= thisCamp._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Enter Name of Campground</label>
                <input id="name" value="<%= thisCamp.name %>" class="form-control" type="text" name="campground[name]" required placeholder="Camp Ground">
            </div>
            <div class="form-group">
                <label for="img">Enter Image URL</label>
                <input id="img" value="<%= thisCamp.image %>" class="form-control" type="url" name="campground[image]" placeholder="Image URL" required />
            </div>
            <div class="form-group">
                <label for="price">Enter The Price of The Campground Per Night(In $ Dollars)</label>
                <input id="price" value="<%= thisCamp.price %>" class="form-control" type="number" min="0.01" step="0.01" name="campground[price]" required placeholder="Camp Ground Price">
            </div>
            <div class="form-group">
                <label for="desc">Enter a Description for the Camp Ground</label>
                <textarea id="desc" class="form-control" name="campground[description]" placeholder="Campground Description" rows="6"><%= thisCamp.description %></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Submit Changes!</button>
            </div>
        </form>
        <a class="btn btn-success" href="/campgrounds/<%= thisCamp._id %>">Go Back to This Post</a>
    </div>
</div>

<% include ../partials/foot %>