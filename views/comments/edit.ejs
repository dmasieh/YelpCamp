<% include ../partials/head %>

<h1 class="text-center" style="margin-top: 1rem;">Edit This Comment!</h1>

<div class="row" style="margin-top: 1rem; margin-bottom: 1rem;">
    <div style="width: 50%; margin: 0 auto;">
        <form action="/campgrounds/<%= /*campground._id*/ campground_id %>/comments/<%= thisComment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="text">Comment Text</label>
                <input id="text" class="form-control" type="text" name="comment[text]" value="<%= thisComment.text %>" required placeholder="Comment">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Submit Comment</button>
            </div>
        </form>
        <!--
        <a class="btn btn-success" href="/campgrounds/<%= /*campground._id*/ %>">Go Back to <%= /*campground.name*/ %></a>
        -->
        <a class="btn btn-success" href="/campgrounds/<%= campground_id %>">Go Back</a>
    </div>
</div>
<% include ../partials/foot %>