<% include ../partials/head %>

<h1 class="text-center" style="margin-top: 1rem;">Log In to Your Account!</h1>

<div class="row" style="margin-top: 1rem; margin-bottom: 1rem;">
    <div style="width: 50%; margin: 0 auto;">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Enter Your User Name</label>
                <input id="username" class="form-control" type="text" name="username" required placeholder="Username">
            </div>
            <div class="form-group">
                <label for="password">Enter Your Password</label>
                <input id="password" class="form-control" type="password" name="password" required placeholder="Password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Log In To Your Acount</button>
            </div>
        </form>
        <a class="btn btn-light btn-block" href="/campgrounds">Or Not</a>
    </div>
</div>

<% include ../partials/foot %>